<h1>GETCHA BURGAS HERE!</h1>

<img src="/public/assets/img/burger.png" alt="burger_image">

<h2>YUH BURGA'S READY OVA HERE!</h2>

<ul>
  {{#each burgers}}
    {{#unless this.devoured}}
      <li>
        {{this.burger_name}}

        <form action="/{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" name="devoured" value="true">
          <button type="submit">DEVOUR</button>
        </form>

      </li>
    {{/unless}}
  {{/each}}
</ul>

<h2>BURGAS YOU'VE EATEN OVA HERE!</h2>

<ul>
  {{#each burgers}}
    {{#if this.devoured}}
      <li>
        {{this.burger_name}}

        <form action="/{{this.id}}?_method=PUT" method="POST">
        </form>

      </li>
    {{/if}}
  {{/each}}
